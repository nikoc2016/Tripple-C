<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vitaliysix.triplec.MainActivity">

    <GridLayout
        android:id="@+id/theGrid"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/bg"
        android:columnCount="3"
        android:rowCount="3"
        android:scaleType="fitCenter">

        <ImageView
            android:id="@+id/btn1"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:onClick="game_play"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn4"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn5"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn6"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn7"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn8"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:onClick="game_play" />

        <ImageView
            android:id="@+id/btn9"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:onClick="game_play" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/thePrompt"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triple C\n\nMake chess tripple to win"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />


        <ToggleButton
            android:id="@+id/btn_insane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="game_insane"
            android:text="Enable Unbeatable AI"
            android:textAlignment="center"
            android:textOff="Enable Unbeatable AI"
            android:textOn="Disable Unbeatable AI"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="game_new"
            android:text="New Game" />


    </LinearLayout>

</RelativeLayout>
